
@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KurudhiPortal</title>
    <link rel="icon" type="image/x-icon" href="~/images/NTK_KURUDHI_Logo.jpg">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/signup.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/signup.js"></script>
    <script src="~/js/jquery.validate.js"></script>
</head>
<body>
    <section class="header-section">
        <div class="header">
            <h2>SignUp</h2>
            <form id="task-form">
                <div class="form-group row task" id="1">
                    <div class="col-12 col-md-6 col-sm-12">
                        <input type="text" class="form-control" id="fname" name="fname" tabindex="1">
                    </div>
                    <div class="col-12 col-md-6 col-sm-12">
                        <select class="form-select" name="country" tabindex="2">
                            <option value="">Country</option>
                            <option value="India">India</option>
                        </select>
                    </div>                   
                </div> 
                <div class="form-group row task" id="12">
                    <div class="col-12 col-md-6 col-sm-12">
                        <input type="text" class="form-control" id="lname" name="lname" tabindex="3">
                    </div>
                    <div class="col-12 col-md-6 col-sm-12">
                         <select class="form-select" name="state" tabindex="5">
                            <option value="">Select State</option>
                            <option value="TamilNadu">Tamil Nadu</option>
                            <option value="Kerla">Kerla</option>
                            <option value="Delhi">Delhi</option>
                            <option value="AndraPradesh">Andra Pradesh</option>
                          </select>
                    </div>                   
                </div> 
                <div class="form-group row task" id="12">
                    <div class="col-12 col-md-6 col-sm-12">
                        <select class="form-select" name="gender" tabindex="6">
                            <option value="">Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Ohers">Ohers</option>
                          </select>
                    </div>
                    <div class="col-12 col-md-6 col-sm-12 div-container">
                        <select class="form-select" name="district" tabindex="7">
                            <option value="">District</option>
                            <option value="Ariyalur">Ariyalur</option>
                            <option value="Chengalpattu">Chengalpattu</option>
                            <option value="Chennai">Chennai</option>
                            <option value="Coimbatore">Coimbatore</option>
                            <option value="Cuddalore">Cuddalore</option>
                            <option value="Dharmapuri">Dharmapuri</option>
                            <option value="Dindigul">Dindigul</option>
                            <option value="Erode">Erode</option>
                            <option value="Kallakurichi">Kallakurichi</option>
                            <option value="Kancheepuram">Kancheepuram</option>
                            <option value="Karur">Karur</option>
                            <option value="Krishnagiri">Krishnagiri</option>
                            <option value="Madurai">Madurai</option>
                          </select>
                    </div>                    
                </div> 
                <div class="form-group row task" id="">
                    <div class="col-12 col-md-6 col-sm-12" >
                        <input type="number" class="form-control" id="age" name="age" tabindex="8">
                    </div>
                    <div class="col-12 col-md-6 col-sm-12">
                        <input type="email" class="form-control" id="email" name="email" tabindex="9">
                    </div>                    
                </div> 
                <div class="form-group row task" id="">
                    <div class="col-12 col-md-6 col-sm-12">
                        <select class="form-select" name="bloodgroup" tabindex="10">
                            <option value="">Blood Group</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="b+">b+</option>
                            <option value="b-">b-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                          </select>
                    </div>
                    <div class="col-12 col-md-6 col-sm-12">
                        <input type="password" class="form-control" id="Password" name="password" tabindex="11">
                    </div>                    
                </div> 
                <div class="form-group row task" id="12">
                    <div class="col-12 col-md-6 col-sm-12">
                        <input type="number" class="form-control" id="mobilenumber" name="mobilenumber" tabindex="12">
                    </div>                    
                </div>
                <div class="sign-up">
                    <button type="submit" class="btn signup-btn" tabindex="13">Confirm Request</button>
                </div>
            </form>
        </div>
        </section>
</body>

