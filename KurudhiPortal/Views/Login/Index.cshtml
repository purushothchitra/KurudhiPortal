@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<head>
    <title>@ViewData["Title"] - KurudhiPortal</title>
    <link rel="icon" type="image/x-icon" href="~/images/NTK_KURUDHI_Logo.jpg">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/login.css"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/login.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
</head>
<section class="header-section">
    <div class="header">
        <div class="container-fluied">
            <div class="row login-header-container">
                  <div class="col-12 col-sm-8 col-md-8 col-lg-5 col-xl-5">
                      <div class="log-in-container">
                              <div class="logo-image">
                                <img src="~/images/NTK_KURUDHI_Logo.jpg" alt="KURUDHI LOGO" height="180" width="180">
                          </div>
                          <div>
                              <h5 class="login-text">Sign In</h5>
                          </div>
                          
                        <form class="login-form">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="username" name="username" placeholder="username" tabindex="1">
                                <label for="floatingInput">User Name</label>
                            </div>
                            <div class="form-floating password-container">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" tabindex="2">
                                <i class="bi bi-eye-slash password-hide-icon"></i>
                                <i class="bi bi-eye password-show-icon"></i>
                                <label for="floatingPassword">Password</label>
                            </div>
                            <div class="login-box">
                                <button class="btn login-btn" type="submit" tabindex="3">Login</button>
                            </div>
                        </form>
                         
                        <div class="sign-up">
                            <span>Don't have an account? <a href="/Login/SignUp" tabindex="4"><b>Sign Up</b></a></span>
                        </div>
                        <div class="forgot-password">
                            <a href="#" type="button" class="forgot-password-text" tabindex="5"><b>Forgot Password</b></a>
                        </div>
                      </div>
                  </div>
            </div>
        </div>
    </div>
</section>


