
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KurudhiPortal</title>
    <link rel="icon" type="image/x-icon" href="~/images/NTK_KURUDHI_Logo.jpg">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/login.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/login.js"></script>
</head>

<section class="header-section">
    <div class="header">
        <div class="container-fluied">
            <div class="row login-header-container">
                  <div class="col-12 col-sm-8 col-md-8 col-lg-5 col-xl-5">
                      <div class="log-in-container">
                              <div class="logo-image">
                                <img src="~/images/NTK_KURUDHI_Logo.jpg" alt="KURUDHI LOGO" height="180" width="180">
                          </div>
                          <div >
                              <h5 class="login-text">LogIn</h5>
                          </div>
                        <form class="login-form">
                        <div class="form-group email-container mb-4">
                            <input type="email" class="form-control input" id="email" name="email"  aria-describedby="emailHelp" placeholder="" tabindex="1">
                            <small id="email-validation"></small>
                            <div class="email-position">
                                <span class="">Email</span>
                            </div>
                        </div>
                        <div class="form-group email-container">
                            <input type="password" class="form-control input" id="password" name="password"  aria-describedby="emailHelp" placeholder="" tabindex="2">
                            <small id="password-validation"></small>
                            <div class="email-position">
                                <span class="">Password</span>
                            </div>
                        </div>
                        <div class="login-box">
                            <button class="btn login-btn" type="submit" tabindex="3">Login</button>
                        </div>
                        </form>
                        <div class="sign-up">
                            <span>Don't have an account? <a href="/Login/SignUp" tabindex="4"><b>Sign Up</b></a></span>
                        </div>
                        <div class="forgot-password">
                            <a href="#" type="submit" tabindex="5"><b>Forgot Password</b></a>
                        </div>
                      </div>
                  </div>
            </div>
        </div>
    </div>
</section>

